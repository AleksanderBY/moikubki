{% extends 'UserBundle::layout.html.twig' %}

{% block title %} login {% endblock %}

{% block form %}
<!-- Nav tabs -->
<ul class="nav nav-tabs nav-justified">
    <li class="active"><a href="#"><i class="fa fa-sign-in"></i>Войти</a></li>
</ul>



<!-- Tab panes -->
<div class="tab-content">
    <div class="tab-pane fade active in" id="login">


    {% if error %}
        <div class="alert alert-danger">{{ error|trans({}, 'FOSUserBundle') }}</div>
    {% endif %}
        <!-- Login form -->


        <form role="form" action="{{ path("fos_user_security_check") }}" method="post">
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

            <div class="form-group">
                <label for="username">{{ 'security.login.username'|trans({}, 'FOSUserBundle') }}</label>
                <input type="text" id="username" name="_username" class="form-control"  value="{{ last_username }}" required="required" placeholder="Username">
            </div>

            <div class="form-group">
                <label for="password">{{ 'security.login.password'|trans({}, 'FOSUserBundle') }}</label>
                <input type="password" class="form-control" id="password" placeholder="Password" name="_password" required="required">
            </div>

            <div class="checkbox">
                <label id="remember_me" name="_remember_me" value="on">
                    <input type="checkbox"> {{ 'security.login.remember_me'|trans({}, 'FOSUserBundle') }}
                </label>
            </div>
            <button type="submit" class="btn btn-danger btn-sm">Submit</button>
            <button type="reset" class="btn btn-black btn-sm">Reset</button>
        </form>

    </div>
</div>

{% endblock %}